pipeline {
    agent {
        node {
            label 'AGENT-1'
        }
    }

    environment {
        COURSE = "jenkins"
    }

    options {
        //timeout(time: 10, unit: 'SECONDS')   // pipeline max runtime
        disableConcurrentBuilds()     
        ansiColor('xterm')       // prevent parallel runs
    }

    stages {
        stage('init') {
            steps {
                script {
                    withAWS(region: 'us-east-1', credentials: 'aws-creds') {
                        sh """ 
                            cd 10-sg
                            terraform init -reconfigure
                        
                        """ 
                    }   
                }
            }
        }

        stage('plan') {
            steps {
                script {
                    withAWS(region: 'us-east-1', credentials: 'aws-creds') {

                             sh """ 
                                cd 10-sg
                                terraform plan
                        
                             """ 
